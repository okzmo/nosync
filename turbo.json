{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "queue:listen": {
      "cache": false,
      "persistent": true
    },
    "sync:cells": {
      "cache": false,
      "persistent": true
    },
    "db:migration": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
