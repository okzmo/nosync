{
  "manifest_version": 3,
  "name": "Nosync - Companion app",
  "version": "0.0.1",
  "description": "Nosync's companion app",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {},
  "permissions": ["scripting", "contextMenus", "cookies"],
  "host_permissions": [
    "http://localhost:3333/*",
    "http://localhost/*",
    "https://*.nosync.app/*"
  ]
}
